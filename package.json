{
  "name": "addi",
  "icon": "resources/icon-bg.min.png",
  "displayName": "Addi",
  "description": "add more custom AI providers and models for your copilot",
  "version": "0.0.1",
  "publisher": "deepwn",
  "repository": {
    "type": "git",
    "url": "https://github.com/deepwn/addi.git"
  },
  "homepage": "https://github.com/deepwn/addi",
  "bugs": {
    "url": "https://github.com/deepwn/addi/issues"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "keywords": [
    "AI",
    "ChatGPT",
    "Copilot",
    "OpenAI",
    "GPT-4",
    "GPT-3.5",
    "LLM",
    "Language Model",
    "Machine Learning",
    "Custom",
    "OAI"
  ],
  "categories": [
    "AI",
    "Chat",
    "Programming Languages",
    "Machine Learning"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "addi.chat",
        "name": "addi",
        "fullName": "Addi Assistant",
        "description": "Access your custom Addi providers directly in chat",
        "isSticky": false
      }
    ],
    "icons": {
      "config-export-icon": {
        "description": "Config Export Icon",
        "default": {
          "fontPath": "resources/bootstrap-icons.woff",
          "fontCharacter": "\\F29B"
        }
      },
      "config-import-icon": {
        "description": "Config Import Icon",
        "default": {
          "fontPath": "resources/bootstrap-icons.woff",
          "fontCharacter": "\\F358"
        }
      },
      "use-model-icon": {
        "description": "Use Model Icon",
        "default": {
          "fontPath": "resources/bootstrap-icons.woff",
          "fontCharacter": "\\F268"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "addiSidebar",
          "title": "Addi",
          "icon": "resources/icon.min.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "addiProviders",
        "contents": "Welcome to Addi!\n\nGet started by adding your first AI provider. Or first check [Docs](https://github.com/deepwn/addi)\n\n[Add Provider](command:addi.addProvider)\n\n[Import Config](command:addi.importConfig)"
      }
    ],
    "views": {
      "addiSidebar": [
        {
          "icon": "resources/icon.min.svg",
          "id": "addiProviders",
          "name": "Panel",
          "commands": [
            {
              "command": "addi.addProvider",
              "title": "Add Provider",
              "icon": "$(add)"
            }
          ]
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "addi.addProvider",
          "when": "view == addiProviders",
          "group": "navigation@1"
        },
        {
          "command": "addi.importConfig",
          "when": "view == addiProviders",
          "group": "navigation@2"
        },
        {
          "command": "addi.exportConfig",
          "when": "view == addiProviders",
          "group": "navigation@3"
        }
      ],
      "commandPalette": [
        {
          "command": "addi.addProvider",
          "when": "false"
        },
        {
          "command": "addi.editProvider",
          "when": "false"
        },
        {
          "command": "addi.deleteProvider",
          "when": "false"
        },
        {
          "command": "addi.addModel",
          "when": "false"
        },
        {
          "command": "addi.editModel",
          "when": "false"
        },
        {
          "command": "addi.deleteModel",
          "when": "false"
        },
        {
          "command": "addi.useModel",
          "when": "false"
        },
        {
          "command": "addi.editApiKey",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "addi.addModel",
          "when": "view == addiProviders && viewItem == provider",
          "group": "inline"
        },
        {
          "command": "addi.editApiKey",
          "when": "view == addiProviders && viewItem == provider",
          "group": "inline"
        },
        {
          "command": "addi.editProvider",
          "when": "view == addiProviders && viewItem == provider",
          "group": "modify"
        },
        {
          "command": "addi.deleteProvider",
          "when": "view == addiProviders && viewItem == provider",
          "group": "modify"
        },
        {
          "command": "addi.editModel",
          "when": "view == addiProviders && viewItem == model",
          "group": "modify"
        },
        {
          "command": "addi.deleteModel",
          "when": "view == addiProviders && viewItem == model",
          "group": "modify"
        },
        {
          "command": "addi.useModel",
          "when": "view == addiProviders && viewItem == model",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Addi Settings",
      "properties": {
        "addi.defaultMaxInputTokens": {
          "type": "number",
          "default": 4096,
          "description": "Max input tokens"
        },
        "addi.defaultMaxOutputTokens": {
          "type": "number",
          "default": 1024,
          "description": "Max output tokens"
        },
        "addi.defaultModelFamily": {
          "type": "string",
          "default": "Addi",
          "description": "Default model family to use for AI providers"
        },
        "addi.defaultModelVersion": {
          "type": "string",
          "default": "1.0.0",
          "description": "Default model version to use for AI providers"
        },
        "addi.saveConfigToSettingsSync": {
          "type": "boolean",
          "default": true,
          "description": "Whether to save the addi configuration to the vscode settings sync cloud"
        }
      }
    },
    "commands": [
      {
        "command": "addi.manage",
        "title": "Provider & Model Management",
        "shortTitle": "Management",
        "icon": "$(settings-gear)",
        "category": "Addi"
      },
      {
        "command": "addi.addProvider",
        "title": "Add Provider",
        "shortTitle": "Add",
        "icon": "$(add)",
        "category": "Addi"
      },
      {
        "command": "addi.editProvider",
        "title": "Edit Provider",
        "shortTitle": "Edit",
        "icon": "$(edit)",
        "category": "Addi"
      },
      {
        "command": "addi.deleteProvider",
        "title": "Delete Provider",
        "shortTitle": "Delete",
        "icon": "$(trash)",
        "category": "Addi"
      },
      {
        "command": "addi.addModel",
        "title": "Add Model",
        "shortTitle": "Add",
        "icon": "$(add)",
        "category": "Addi"
      },
      {
        "command": "addi.editModel",
        "title": "Edit Model",
        "shortTitle": "Edit",
        "icon": "$(edit)",
        "category": "Addi"
      },
      {
        "command": "addi.deleteModel",
        "title": "Delete Model",
        "shortTitle": "Delete",
        "icon": "$(trash)",
        "category": "Addi"
      },
      {
        "command": "addi.useModel",
        "title": "Use Model",
        "shortTitle": "Use",
        "icon": "$(use-model-icon)",
        "category": "Addi"
      },
      {
        "command": "addi.editApiKey",
        "title": "Edit API Key",
        "shortTitle": "Key",
        "icon": "$(key)",
        "category": "Addi"
      },
      {
        "command": "addi.exportConfig",
        "title": "Export Configuration",
        "shortTitle": "Export",
        "icon": "$(config-export-icon)",
        "category": "Addi"
      },
      {
        "command": "addi.importConfig",
        "title": "Import Configuration",
        "shortTitle": "Import",
        "icon": "$(config-import-icon)",
        "category": "Addi"
      },
      {
        "command": "addi.debug.printSettingsSyncState",
        "title": "Print Settings Sync State",
        "icon": "$(bug)",
        "category": "Addi"
      }
    ],
    "languageModelChatProviders": [
      {
        "vendor": "addi-provider",
        "displayName": "Addi",
        "managementCommand": "addi.manage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "vsix": "yarn package && vsce package --baseImagesUrl https://raw.githubusercontent.com/deepwn/addi/refs/heads/main/ --yarn",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn compile-tests && yarn compile && yarn lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
}
