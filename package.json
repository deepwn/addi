{
  "name": "addi",
  "icon": "resources/icon-bg.min.png",
  "displayName": "Addi",
  "description": "add more custom AI providers and models for your copilot",
  "version": "0.0.1",
  "publisher": "deepwn",
  "repository": {
    "type": "git",
    "url": "https://github.com/deepwn/addi.git"
  },
  "homepage": "https://github.com/deepwn/addi",
  "bugs": {
    "url": "https://github.com/deepwn/addi/issues"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Programming Languages",
    "Machine Learning"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "addiSidebar",
          "title": "Addi",
          "icon": "resources/icon.min.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "addiProviders",
        "contents": "Welcome to Addi!\n\nGet started by adding your first AI provider. Or first check [Docs](https://github.com/deepwn/addi)\n\n[Add Provider](command:addi.addProvider)\n\n[Import Config](command:addi.importConfig)"
      }
    ],
    "views": {
      "addiSidebar": [
        {
          "icon": "resources/icon.min.svg",
          "id": "addiProviders",
          "name": "AI Providers & Models",
          "commands": [
            {
              "command": "addi.addProvider",
              "title": "Add Provider",
              "icon": "$(add)"
            }
          ]
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "addi.addProvider",
          "when": "view == addiProviders",
          "group": "navigation@1"
        },
        {
          "command": "addi.exportConfig",
          "when": "view == addiProviders",
          "group": "navigation@2"
        },
        {
          "command": "addi.importConfig",
          "when": "view == addiProviders",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "addi.addModel",
          "when": "view == addiProviders && viewItem == provider",
          "group": "inline"
        },
        {
          "command": "addi.editApiKey",
          "when": "view == addiProviders && viewItem == provider",
          "group": "inline"
        },
        {
          "command": "addi.editProvider",
          "when": "view == addiProviders && viewItem == provider",
          "group": "modify"
        },
        {
          "command": "addi.deleteProvider",
          "when": "view == addiProviders && viewItem == provider",
          "group": "modify"
        },
        {
          "command": "addi.editModel",
          "when": "view == addiProviders && viewItem == model",
          "group": "modify"
        },
        {
          "command": "addi.deleteModel",
          "when": "view == addiProviders && viewItem == model",
          "group": "modify"
        },
        {
          "command": "addi.useModel",
          "when": "view == addiProviders && viewItem == model",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Addi Settings",
      "properties": {
        "addi.defaultMaxInputTokens": {
          "type": "number",
          "default": 4096,
          "description": "Max input tokens"
        },
        "addi.defaultMaxOutputTokens": {
          "type": "number",
          "default": 1024,
          "description": "Max output tokens"
        },
        "addi.defaultModelVersion": {
          "type": "string",
          "default": "1.0.0",
          "description": "Default model version to use for AI providers"
        }
      }
    },
    "commands": [
      {
        "command": "addi.manage",
        "title": "Manage AI Providers & Models",
        "icon": "$(settings-gear)"
      },
      {
        "command": "addi.addProvider",
        "title": "Add Provider",
        "icon": "$(add)"
      },
      {
        "command": "addi.editProvider",
        "title": "Edit Provider",
        "icon": "$(edit)"
      },
      {
        "command": "addi.deleteProvider",
        "title": "Delete Provider",
        "icon": "$(trash)"
      },
      {
        "command": "addi.addModel",
        "title": "Add Model",
        "icon": "$(add)"
      },
      {
        "command": "addi.editModel",
        "title": "Edit Model",
        "icon": "$(edit)"
      },
      {
        "command": "addi.deleteModel",
        "title": "Delete Model",
        "icon": "$(trash)"
      },
      {
        "command": "addi.useModel",
        "title": "Use Model",
        "icon": "$(play)"
      },
      {
        "command": "addi.editApiKey",
        "title": "Edit API Key",
        "icon": "$(key)"
      },
      {
        "command": "addi.exportConfig",
        "title": "Export Configuration",
        "icon": "$(desktop-download)"
      },
      {
        "command": "addi.importConfig",
        "title": "Import Configuration",
        "icon": "$(cloud-upload)"
      }
    ],
    "languageModelChatProviders": [
      {
        "vendor": "addi-provider",
        "displayName": "Addi",
        "managementCommand": "addi.manage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "vsix": "npm run package && npx --yes @vscode/vsce package --out addi.vsix",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
